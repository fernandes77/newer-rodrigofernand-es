---
interface Props {
  src: string;
}

const { src } = Astro.props;
const alt = "A photo of Rodrigo Fernandes";
---

<section>
  <a href="/">  
    <div>
      <img
        src={src}
        alt={alt}
        width={64}
        height={64}
        loading="eager"
      />
    </div>
    <h1>Rodrigo Fernandes</h1>
  </a>
</section>

<style>
  section {
    text-align: center;
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 1rem;
    margin: 0;
    line-height: 1;
    font-weight: 300;
    color: var(--text-300);
    text-transform: uppercase;
    letter-spacing: 3px;
    font-family: "Source Serif 4", serif;
  }

  small {
    display: block;
  }

  div,
  img {
    border-radius: 99px;
  }

  a {
    text-decoration: none;
  }
</style>
