---
import BaseLayout from "./BaseLayout.astro";

interface Props {
  frontmatter: {
    title: string;
    description: string;
    pubDate: string;
    author?: string;
    image?: { url: string; alt: string };
    tags?: string[];
  };
}

const { frontmatter } = Astro.props;
const formattedDate = new Date(frontmatter.pubDate).toLocaleDateString(
  "en-US",
  {
    year: "numeric",
    month: "long",
    day: "numeric",
  }
);
---

<BaseLayout
  metadata={{ title: frontmatter.title, description: frontmatter.description }}
  frontmatter={frontmatter}
>
  <header class="post-header">
    <time datetime={frontmatter.pubDate}>{formattedDate}</time>
    <h1>{frontmatter.title}</h1>
  </header>
  <article>
    <slot />
  </article>
</BaseLayout>

<style>
  .post-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .post-header time {
    font-weight: 300;
    opacity: 0.66;
    font-size: 15px;
    margin-bottom: 10px;
  }

  .post-header h1 {
    margin-top: 0.25rem;
  }
</style>
