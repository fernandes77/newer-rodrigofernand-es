---
import BaseLayout from "../layouts/BaseLayout.astro";

const metadata = {
  title: "Home | Rodrigo Fernandes",
  description: "I am Rodrigo Fernandes and this is my webpage.",
};

const posts = await Astro.glob("./posts/*.md");
const sortedPosts = posts.sort(
  (a, b) =>
    new Date(b.frontmatter.pubDate).getTime() -
    new Date(a.frontmatter.pubDate).getTime()
);
---

<BaseLayout metadata={metadata}>
  <section>
    <p>
      I am Rodrigo Fernandes and this is my webpage. More <a href="/about/">
        about me</a
      >.
    </p>
  </section>
  <section>
    <h2>Projects</h2>
    <ul>
      <li>
        <a href="https://tabelanutricional.rodrigofernand.es/" target="_blank"
          >Tabela Nutricional</a
        >
        <span>A table of brazilian nutritional information</span>
      </li>
      <li>
        <a href="https://tierlistdf.rodrigofernand.es/" target="_blank"
          >Tier List DF</a
        >
        <span>A tier list of Bras√≠lia's neighborhoods</span>
      </li>
    </ul>
  </section>
  <section>
    <h2>Posts</h2>
    <ul>
      {
        sortedPosts.map((post) => (
          <li>
            <a href={post.url}>{post.frontmatter.title}</a>
            <span>
              {new Date(post.frontmatter.pubDate).toLocaleDateString("en-US", {
                year: "numeric",
                month: "long",
                day: "numeric",
              })}
            </span>
          </li>
        ))
      }
    </ul>
  </section>
  <section>
    <h2>Find me at</h2>
    <ul>
      <li>
        <a href="mailto:me@rodrigofernand.es">Email</a>
      </li>
      <li>
        <a href="https://www.linkedin.com/in/rodrigofernand-es/" target="_blank"
          >LinkedIn</a
        >
      </li>
      <li>
        <a href="https://github.com/fernandes77" target="_blank">GitHub</a>
      </li>
      <li>
        <a href="https://x.com/rodrigofrnd" target="_blank">X | Twitter</a>
      </li>
    </ul>
  </section>
</BaseLayout>

<style>
  ul li span {
    font-weight: 300;
    color: var(--text);
    opacity: 0.66;
    margin-left: 0.2rem;
  }
</style>
